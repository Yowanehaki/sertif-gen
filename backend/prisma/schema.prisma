generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Peserta {
  id_sertif         String   @id
  nama              String
  email             String?
  no_telp           String?
  aktivitas         String
  tgl_submit        DateTime
  nama_penguji      String?
  jabatan_penguji   String?
  tgl_terbit_sertif DateTime?
  tandatangan       String?
  konfirmasi_hadir  Boolean
  kodePerusahaan    KodePerusahaan?
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Aktivitas {
  id    Int    @id @default(autoincrement())
  nama  String @unique
  kode  String @unique
  aktif Boolean @default(true)
}

model KodePerusahaan {
  id_sertif   String   @id
  kode        String
  batch       String
  no_urut     Int
  peserta     Peserta  @relation(fields: [id_sertif], references: [id_sertif])

  @@unique([kode, batch, no_urut])
}

model Batch {
  id    Int    @id @default(autoincrement())
  nama  String @unique
  aktif Boolean @default(true)
}

model Settings {
  id      Int    @id @default(autoincrement())
  key     String @unique
  value   String
}